#!/bin/sh

if [ $# -eq 1 ]; then
    selected="$1"
else
    selected="$(find ~/Projects/ ~/Repos/ ~/.config/ ~/.local/ -mindepth 1 -maxdepth 2 -type d | grep -vE '\.git|node_modules' | fzf)"
fi

[ -z "$selected" ] && exit 0

selected_name="$(basename "$selected" | tr . _)"

tmux_running="$(pgrep tmux)"

if [ -z "$TMUX" ] && [ -z "$tmux_running" ]; then
    tmux new-session -s "$selected_name" -c "$selected"
    exit 0
fi

if ! tmux has-session -t="$selected_name" 2> /dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux attach-session -t "$selected_name" || tmux switch-client -t "$selected_name"
